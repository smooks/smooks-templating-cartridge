<?xml version="1.0"?>
<smooks-resource-list xmlns="https://www.smooks.org/xsd/smooks-1.2.xsd" xmlns:jb="https://www.smooks.org/xsd/smooks/javabean-1.6.xsd">

    <resource-config selector="global-parameters">
        <param name="default.serialization.on">false</param>
        <param name="stream.filter.type">SAX</param>
    </resource-config>

    <jb:bean beanId="myBeanData" class="org.smooks.cartridges.templating.MyBean" createOnElement="b">
       <jb:value property="x" data="b/@x" />
    </jb:bean>

    <resource-config selector="c">
        <resource>/org/smooks/cartridges/templating/freemarker/test-template.ftl</resource>
        <param name="action">insertbefore</param>
    </resource-config>

    <resource-config selector="e">
        <resource>/org/smooks/cartridges/templating/freemarker/test-template.ftl</resource>
        <param name="action">insertafter</param>
    </resource-config>

    <resource-config selector="d">
        <resource>org.smooks.delivery.sax.DefaultSAXElementSerializer</resource>
    </resource-config>

</smooks-resource-list>
