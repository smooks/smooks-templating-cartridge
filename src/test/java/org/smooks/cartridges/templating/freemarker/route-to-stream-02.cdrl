<?xml version="1.0"?>
<smooks-resource-list xmlns="https://www.smooks.org/xsd/smooks-1.2.xsd" xmlns:jb="https://www.smooks.org/xsd/smooks/javabean-1.6.xsd">

    <resource-config selector="#document">
        <resource>org.smooks.cartridges.templating.MockOutStreamResource</resource>
        <param name="resourceName">mockOutStream</param>
    </resource-config>

    <jb:bean beanId="myBeanCData" class="org.smooks.cartridges.templating.MyBean" createOnElement="c">
        <jb:value property="x" data="c/@x" />
    </jb:bean>

    <resource-config selector="d">
        <resource type="ftl"><!--<mybean>${myBeanCData.x}</mybean>--></resource>
        <param name="outputStreamResource">mockOutStream</param>
        <param name="applyTemplateBefore">true</param>
    </resource-config>

    <resource-config selector="e">
        <resource type="ftl"><!--<mybean>${myBeanEData.x}</mybean>--></resource>
        <param name="outputStreamResource">mockOutStream</param>
    </resource-config>

    <jb:bean beanId="myBeanEData" class="org.smooks.cartridges.templating.MyBean" createOnElement="e">
        <jb:value property="x" data="e/@x" />
    </jb:bean>

</smooks-resource-list>
